<div class="my-custom-view slick-slider">
  {% for row in rows %}
      <div class="conference-card">
                <div class="conference-image">
                    {% if row.content['#row']._entity.field_conf_image.entity.uri.value %}
                      <img src={{ file_url(row.content['#row']._entity.field_conf_image.entity.uri.value) }}>
                    {% else %}
                        <div class="image-placeholder">
                            <p>{{ row.content['#row']._entity.field_title[0].value }}</p>
                        </div>
                    {% endif %}

                    {% set price_value = row.content['#row']._entity.field_price[0].value %}
                    {% if price_value is not empty %}
                        <div class="conference-price-overlay">
                            {% if price_value == '0' %}
                                <span class="conference-price">FREE</span>
                            {% else %}
                                <span class="conference-price">â‚¹ {{ price_value }}</span>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
                <div class="conference-details">
                    <h4>{{ row.content['#row']._entity.field_title[0].value }}</h4>
                    <p>
                    <img src="{{ base_path ~ directory }}/svg/tag.svg" alt="Icon" class="icon-inline"/>
                    {% if row.content['#row']._entity.field_conference_type[0] is not empty %}
                    {% set conference_types = row.content['#row']._entity.field_conference_type %}
                    {% for type in conference_types %}
                        {{ type.value|capitalize }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                    {% endif %}
                    </p>
                    <p>
                    <img src="{{ base_path ~ directory }}/svg/calendar.svg" alt="Icon" class="icon-inline"/>
                    {{ row.content['#row']._entity.field_conference_date[0].value|date('d-M-Y') }}
                    </p>
                    <p>
                    <img src="{{ base_path ~ directory }}/svg/location.svg" alt="Icon" class="icon-inline"/>
                    {{ row.content['#row']._entity.field_location[0].value }}
                    </p>
                </div>
                <div class="conference-overlay">
                    <div class="overlay-content">
                        <div class="overlay-icon">
                            <a href="#" aria-label="Like">
